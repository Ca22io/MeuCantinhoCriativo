@model MeuCantinhoCriativo.ViewModels.CadastroViewModel

<h2>Cadastro de Novo Usu√°rio</h2>

<form asp-action="Cadastrar" class="row">

    <div class="form-group col-sm-6 col-lg-3 col-xl-2">
        <label asp-for="Nome" class="fw-bold"></label><br>
        <input asp-for="Nome" class="form-control" autofocus autocomplete="off">
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="w-100"></div>

    <div class="form-group col-sm-8 col-lg-4 col-xl-3">
        <label asp-for="Email" class="fw-bold"></label><br>
        <input asp-for="Email" class="form-control" autocomplete="off">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="w-100"></div>

    <div class="form-group col-sm-6 col-lg-3 col-xl-2">
        <label asp-for="Password" class="fw-bold">Senha</label><br>
        <input asp-for="Password" autocomplete="off" class="form-control">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="w-100"></div>

    <div class="form-group col-sm-6 col-lg-3 col-xl-2">
        <label asp-for="ConfirmPassword" class="fw-bold"></label><br>
        <input asp-for="ConfirmPassword" autocomplete="off" class="form-control">
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
        <button class="btn btn-primary" type="submit">Salvar</button>
    </div>
</form>