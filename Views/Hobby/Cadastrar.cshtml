@model MeuCantinhoCriativo.ViewModels.HobbyViewModel

@if (Model.Id.HasValue)
{ 
    <h1 class="text-info">Alteração de Hobby</h1>
}
else
{
    <h1 class="text-info">Cadastro de Hobby</h1>
}

<hr/>

<form asp-action="Cadastrar" class="row">
    @if (Model.Id.HasValue)
    {
        <input class="form-control" asp-for="Id" type="hidden">
    }
    
    <div class="form-group col-sm-6 col-lg-3 col-xl-2">
        <label asp-for="Nome" class="fw-bold"></label><br>
        <input asp-for="Nome" class="form-control" autofocus autocomplete="off">
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="w-100"></div>

    <div class="form-group col-sm-8 col-lg-4 col-xl-3">
        <label asp-for="descricao" class="fw-bold">Descrição</label><br>
        <textarea asp-for="descricao" class="form-control" autocomplete="off"></textarea>
        <span asp-validation-for="descricao" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
        <button class="btn btn-primary" type="submit">Salvar</button>
    </div>
</form>