@model MeuCantinhoCriativo.ViewModels.HobbyViewModel

<h1>Deletar Hobby</h1>
<hr/>

<h3>Deseja realmente deletar o hobby: <b>@Model.Nome</b> ?</h3>

<form asp-action="Deletar" class="row">

    <input type="hidden" asp-for="Id" />

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-success">Cancelar</a>
        <button class="btn btn-danger" type="submit">Deletar</button>
    </div>

</form>